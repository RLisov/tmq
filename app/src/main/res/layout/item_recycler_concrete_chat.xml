<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <LinearLayout
        android:id="@+id/elementContainerView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="64dp"
        android:layout_marginStart="16dp"
        android:background="@drawable/bg_message_14x"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/managerIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:scaleType="center"
                android:src="@drawable/ic_info_chat"
                android:visibility="gone"
                tools:ignore="ContentDescription"
                tools:visibility="visible"/>

            <ImageView
                android:id="@+id/unsuccessfulIcon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:scaleType="center"
                android:src="@drawable/ic_info_chat"
                android:visibility="gone"
                tools:ignore="ContentDescription"
                tools:visibility="visible"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/messageText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:autoLink="web"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:text="lorem_ipsum"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:adjustViewBounds="true"
                >

                <View
                    android:id="@+id/backgroundForImage"
                    android:layout_width="175dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/whitout_image"
                    android:visibility="gone"
                    tools:ignore="ContentDescription"
                    tools:visibility="visible"/>

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="175dp"
                    android:layout_height="120dp"
                    android:layout_marginBottom="2dp"
                    android:layout_marginEnd="6dp"
                    android:layout_marginStart="6dp"
                    android:layout_marginTop="6dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/ic_calendar_all_period"
                    android:transitionName="image"
                    android:visibility="gone"
                    tools:ignore="ContentDescription"
                    tools:visibility="visible"/>

                <ProgressBar
                    android:id="@+id/progressImage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:progress="0"
                    android:visibility="gone"
                    tools:visibility="visible"/>

            </FrameLayout>


            <TextView
                android:id="@+id/timeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="2dp"
                android:alpha="0.38"
                android:textColor="@color/black"
                tools:text="Сегодня, 20:04"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
