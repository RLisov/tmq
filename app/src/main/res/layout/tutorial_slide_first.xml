<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

    <ImageView
        android:id="@+id/image"
        style="@style/TutorialScreen.Image"
        android:layout_centerHorizontal="true"
        android:src="@drawable/help_screen_1"
        tools:ignore="ContentDescription"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/image"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        tools:ignore="UselessParent">

        <com.tamaq.courier.widgets.TypeFaceTextView
            style="@style/TutorialScreen.MainText"
            android:text="@string/first_slide_main_text"
            app:typeface="Roboto_Medium.ttf"
            />

        <TextView
            style="@style/TutorialScreen.SecondText"
            android:text="@string/first_slide_second_text"
            />

    </LinearLayout>

</RelativeLayout>